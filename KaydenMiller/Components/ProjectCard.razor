<SfCard>
    <CardImage Image="@ImageUri"></CardImage>
    <CardHeader Title="@ProjectTitle"/>
    <CardContent>
        @ProjectDescription
    </CardContent>
    <CardFooter>
        <CardFooterContent>
            <SfButton>@ButtonText</SfButton>
        </CardFooterContent>
    </CardFooter>
</SfCard>

@code {
    [Parameter]
    public string ImageUri { get; set; }

    [Parameter]
    public string ImageAlt { get; set; }

    [Parameter]
    public string ProjectTitle { get; set; }

    [Parameter]
    public string ProjectDescription { get; set; }

    [Parameter]
    public string ButtonText { get; set; } = "Learn More";

}